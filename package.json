{
  "name": "turborepo-basic-shared",
  "version": "0.0.12",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "front:start": "turbo run start --filter=./apps/web/",
    "front:build": "turbo run build --filter=./apps/web/",
    "front:lint": "turbo run lint --filter=./apps/web/",
    "front:dev": "turbo run dev --filter=./apps/web/",
    "api:dev": "turbo run dev --filter=./apps/api/",
    "api:test": "turbo run test --filter=./apps/api/",
    "api:test-watch": "turbo run test:watch --filter=./apps/api/",
    "api:prepare-deploy": "bash ./scripts/prepare-api-deploy.sh",
    "test": "turbo run test",
    "prepare-env": "bash ./scripts/prepare-env.sh",
    "env-check": "solidarity",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "bash ./scripts/repo-lint.sh",
    "lint-check": "turbo run lint-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "audit:branch": "bash ./scripts/branch-audit.sh",
    "husky:install": "bash ./scripts/husky.sh",
    "clean-repo": "bash ./scripts/clean-repo.sh",
    "changelog": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@repo/configs": "*",
    "@repo/ts-config": "*",
    "@vercel/style-guide": "^5.2.0",
    "eslint": "^8.40.0",
    "eslint-config-next": "^13.4.12",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "7.33.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "nps": "^5.10.0",
    "prettier": "^3.2.5",
    "solidarity": "^3.0.4",
    "standard-version": "^9.5.0",
    "turbo": "latest",
    "validate-branch-name": "^1.3.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.17",
  "standard-version": {
    "standard-version": {
      "types": [
        {
          "type": "rc",
          "section": "Release"
        },
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes"
        },
        {
          "type": "hotfix",
          "section": "Bug Fixes"
        },
        {
          "type": "ci",
          "section": "CI"
        },
        {
          "type": "chore",
          "section": "Chores"
        },
        {
          "type": "style",
          "section": "Styles"
        },
        {
          "type": "docs",
          "section": "Documentação"
        },
        {
          "type": "perf",
          "section": "Melhoria de Perfomance"
        },
        {
          "type": "refac",
          "section": "Refatorações"
        },
        {
          "type": "revert",
          "section": "Reversal"
        },
        {
          "type": "test",
          "section": "Tests"
        }
      ]
    }
  }
}
