{
  "extends": "@repo/ts-config/nextjs.json",
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/app/*": ["./app/*"],
      "~/public/*": ["./public/*"],
      "~/client/*": ["./client/*"],
      "~/components/*": ["./components/*"],
      "@/*": ["./*"]
    },
    "baseUrl": "./"
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "postcss.config.js",
    "tailwind.config.js"
  ],
  "exclude": ["node_modules"]
}
